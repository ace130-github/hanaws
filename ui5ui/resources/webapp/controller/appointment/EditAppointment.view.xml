<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" 
	xmlns="sap.m"
	controllerName="ui5ui.controller.appointment.EditAppointment">
	<Page>
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title="Termin mit {local>/Runner/name}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Termin" />
				<DateTimeInput 
			        type="DateTime" 
				    value= "{
				        path: 'local>/time', 
				        type: 'sap.ui.model.type.DateTime',
				        formatOptions: {
                            pattern: 'dd.MM.yyyy hh:ss'
                        }
                    }"/>
				<Label text="Kommentar" />
				<TextArea value="{local>/comment}" />
				<Label text="erfolgreich?" />
				<Switch state="{
				            path: 'local>/success', 
				            type: 'de.exxcellent.tphana.service.BooleanIntType'
				        }"
				        type="AcceptReject"
				        visible="{
				            path: 'local>/appointmentId',
				            formatter: '.formatSuccessVisibility' 
			            }" 
				        />
			</f:content>
		</f:SimpleForm>
	</VBox>
	<Toolbar>
		<ToolbarSpacer/>
		<Button text="Abbrechen" icon="sap-icon://decline" type="Reject" press="onPressCancel" />
		<Button text="Speichern" icon="sap-icon://accept" type="Accept" press="onPressSave" />
	</Toolbar>	
	</Page>
</mvc:View>